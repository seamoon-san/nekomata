<ui:FluentWindow x:Class="Nekomata.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nekomata.UI"
        xmlns:helpers="clr-namespace:Nekomata.UI.Helpers"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="{DynamicResource AppTitle}" Height="700" Width="1200"
        AllowDrop="True" Drop="Window_Drop"
        WindowStartupLocation="CenterScreen"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        WindowCornerPreference="Round"
        Icon="/Assets/icon.ico">
    
    <ui:FluentWindow.InputBindings>
        <KeyBinding Modifiers="Ctrl" Key="S" Command="{Binding SaveProjectCommand}"/>
        <KeyBinding Modifiers="Ctrl+Shift" Key="X" Command="{Binding BatchApplyTranslationCommand}"/>
        <KeyBinding Modifiers="Ctrl" Key="F" Command="{Binding OpenFindReplaceCommand}"/>
    </ui:FluentWindow.InputBindings>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar: Project List -->
        <Border Grid.Column="0" Background="{DynamicResource SolidBackgroundFillColorSecondaryBrush}" BorderBrush="{DynamicResource SurfaceStrokeColorDefaultBrush}" BorderThickness="0,0,1,0">
            <Grid Margin="10,40,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="{DynamicResource Sidebar_Projects}" FontWeight="SemiBold" Margin="0,0,0,15" FontSize="18" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                
                <StackPanel Grid.Row="1" Margin="0,0,0,15">
                    <ui:Button Content="{DynamicResource Sidebar_OpenGame}" Icon="{ui:SymbolIcon FolderOpen24}" Command="{Binding OpenGameFileCommand}" HorizontalAlignment="Stretch" Margin="0,0,0,10"/>
                    <ui:Button Content="{DynamicResource Sidebar_OpenProject}" Icon="{ui:SymbolIcon Folder24}" Command="{Binding OpenProjectCommand}" HorizontalAlignment="Stretch" Margin="0"/>
                </StackPanel>

                <ui:ListView Grid.Row="2" ItemsSource="{Binding Projects}" SelectedItem="{Binding SelectedProject}" Margin="0" BorderThickness="0" Background="Transparent" SelectionMode="Single">
                    <ui:ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5" Background="Transparent" Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=ui:ListView}}">
                                <Grid.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="{DynamicResource Context_Export}" 
                                                  Command="{Binding PlacementTarget.Tag.ExportProjectCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" 
                                                  CommandParameter="{Binding}"/>
                                        <MenuItem Header="{DynamicResource Context_SaveAndClose}" 
                                                  Command="{Binding PlacementTarget.Tag.CloseProjectCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" 
                                                  CommandParameter="{Binding}"/>
                                    </ContextMenu>
                                </Grid.ContextMenu>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="{Binding EngineType}" FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ui:ListView.ItemTemplate>
                </ui:ListView>
            </Grid>
        </Border>

        <!-- Main Content: Translation Grid -->
        <Grid Grid.Column="1" Margin="20,40,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <DockPanel LastChildFill="False">
                    <StackPanel>
                        <Grid>
                             <TextBlock Text="{Binding SelectedProject.Name}" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                             <TextBlock Text="{DynamicResource Header_SelectProject}" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource TextFillColorPrimaryBrush}">
                                 <TextBlock.Style>
                                     <Style TargetType="TextBlock">
                                         <Setter Property="Visibility" Value="Collapsed"/>
                                         <Style.Triggers>
                                             <DataTrigger Binding="{Binding SelectedProject}" Value="{x:Null}">
                                                 <Setter Property="Visibility" Value="Visible"/>
                                             </DataTrigger>
                                         </Style.Triggers>
                                     </Style>
                                 </TextBlock.Style>
                             </TextBlock>
                        </Grid>
                        <TextBlock Text="{Binding SelectedProject.GamePath}" FontSize="14" Foreground="{DynamicResource TextFillColorSecondaryBrush}" Margin="0,5,0,0"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                        <ui:Button Content="{DynamicResource Header_SaveProject}" Icon="{ui:SymbolIcon Save24}" Command="{Binding SaveProjectCommand}" Margin="0,0,10,0"/>
                        <ui:Button Content="{DynamicResource Header_ApplyTranslation}" Icon="{ui:SymbolIcon ArrowExportUp24}" Command="{Binding ApplyTranslationCommand}" Margin="0,0,10,0" Appearance="Primary"/>
                        <ui:Button Content="{DynamicResource Header_Settings}" Icon="{ui:SymbolIcon Settings24}" Command="{Binding OpenSettingsCommand}"/>
                    </StackPanel>
                </DockPanel>
                
                <TextBlock Text="{DynamicResource Msg_LoadingData}" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" Foreground="{DynamicResource SystemAccentColorBrush}" Margin="0,5,0,0"/>
                
                <!-- Translation Progress -->
                <Grid Margin="0,10,0,0">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedProject}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ProgressBar Value="{Binding TranslationProgress, Mode=OneWay}" Maximum="100" Height="6" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Grid.Column="1" Text="{Binding ProgressDescription}" VerticalAlignment="Center" FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                </Grid>

                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="搜索:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ui:TextBox Grid.Column="1" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="搜索..." Margin="0,0,10,0"/>
                    
                    <TextBlock Grid.Column="2" Text="筛选:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox Grid.Column="3" ItemsSource="{Binding FilterContexts}" SelectedItem="{Binding SelectedFilterContext}" Margin="0,0,10,0"/>
                    
                    <TextBlock Grid.Column="4" Text="分组:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox Grid.Column="5" ItemsSource="{Binding GroupOptions}" SelectedItem="{Binding SelectedGroupOption}" Margin="0,0,10,0"/>
                    
                    <ui:Button Grid.Column="7" Content="查找和替换" Icon="{ui:SymbolIcon Search24}" Command="{Binding OpenFindReplaceCommand}"/>
                </Grid>
            </StackPanel>

            <!-- Translation Grid -->
            <DataGrid x:Name="TranslationGrid" Grid.Row="1" ItemsSource="{Binding TranslationUnitsView}" SelectedItem="{Binding SelectedUnit}" AutoGenerateColumns="False" CanUserAddRows="False"
                      HeadersVisibility="Column" GridLinesVisibility="Horizontal" Background="Transparent" BorderThickness="1" BorderBrush="{DynamicResource SurfaceStrokeColorDefaultBrush}"
                      ColumnWidth="*" PreviewKeyDown="DataGrid_PreviewKeyDown"
                      VirtualizingPanel.IsVirtualizingWhenGrouping="True"
                      VirtualizingPanel.VirtualizationMode="Recycling"
                      VirtualizingPanel.ScrollUnit="Pixel"
                      VirtualizingPanel.CacheLength="2,2"
                      VirtualizingPanel.CacheLengthUnit="Page"
                      ScrollViewer.CanContentScroll="True">
                <DataGrid.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.ContainerStyle>
                            <Style TargetType="{x:Type GroupItem}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type GroupItem}">
                                            <Expander IsExpanded="True" Margin="0,0,0,5"
                                                      helpers:GroupExpansionBehavior.BindExpandedState="True">
                                                <Expander.Header>
                                                    <DockPanel Height="30" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" 
                                                                   VerticalAlignment="Center" 
                                                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                                        <Border Background="{DynamicResource ControlFillColorSecondaryBrush}" 
                                                                CornerRadius="4" Margin="10,0,0,0" Padding="8,2" VerticalAlignment="Center">
                                                            <TextBlock FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                                                <Run Text="{Binding ItemCount, Mode=OneWay}"/>
                                                                <Run Text=" "/>
                                                                <Run Text="{DynamicResource Main_GroupItemCount}"/>
                                                            </TextBlock>
                                                        </Border>
                                                    </DockPanel>
                                                </Expander.Header>
                                                <ItemsPresenter />
                                            </Expander>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Panel.ZIndex" Value="0"/>
                            </Style>
                        </GroupStyle.ContainerStyle>
                        <GroupStyle.Panel>
                            <ItemsPanelTemplate>
                                <DataGridRowsPresenter/>
                            </ItemsPanelTemplate>
                        </GroupStyle.Panel>
                    </GroupStyle>
                </DataGrid.GroupStyle>
                <DataGrid.Resources>
                    <Style TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
                        <EventSetter Event="PreviewMouseLeftButtonDown" Handler="DataGridCell_PreviewMouseLeftButtonDown"/>
                        <EventSetter Event="MouseDoubleClick" Handler="DataGridCell_MouseDoubleClick"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                    <Style TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#26000000"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Context}" Width="Auto" MinWidth="120" IsReadOnly="True">
                        <DataGridTextColumn.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{DynamicResource Grid_Context}"/>
                            </DataTemplate>
                        </DataGridTextColumn.HeaderTemplate>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding OriginalText}" Width="*" MinWidth="200" IsReadOnly="True">
                        <DataGridTextColumn.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{DynamicResource Grid_Original}"/>
                            </DataTemplate>
                        </DataGridTextColumn.HeaderTemplate>
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextWrapping" Value="Wrap"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTemplateColumn Width="*" MinWidth="200">
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{DynamicResource Grid_Human}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding HumanTranslation}" TextWrapping="Wrap" Padding="5"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding HumanTranslation, UpdateSourceTrigger=PropertyChanged}" 
                                         TextWrapping="Wrap" 
                                         AcceptsReturn="True" 
                                         Padding="5"
                                         PreviewKeyDown="TranslationTextBox_PreviewKeyDown"
                                         Loaded="TranslationTextBox_Loaded"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        
        <!-- Window Title Bar -->
        <ui:TitleBar Title="{DynamicResource AppTitle}" Icon="pack://application:,,,/Assets/icon.ico" Grid.ColumnSpan="2" VerticalAlignment="Top"/>
        
        <!-- Busy Overlay -->
        <Grid Grid.ColumnSpan="2" Background="#80000000" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" d:Visibility="Collapsed">
            <ui:ProgressRing IsIndeterminate="True" Width="60" Height="60"/>
        </Grid>

        <ui:SnackbarPresenter x:Name="SnackbarPresenter" Grid.ColumnSpan="2" />
    </Grid>
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
</ui:FluentWindow>
